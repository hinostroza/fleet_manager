<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Extend Fleet Vehicle Form View -->
        <record id="fleet_vehicle_view_form_inherit_fleet_manager" model="ir.ui.view">
            <field name="name">fleet.vehicle.form.inherit.fleet.manager</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Documentation" name="documentation_tab">
                        <field name="document_ids"/>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- Modify fleet.vehicle action to hide Kanban view and set tree as default -->
        <record id="fleet.fleet_vehicle_action" model="ir.actions.act_window">
            <field name="name">Vehicles</field>
            <field name="res_model">fleet.vehicle</field> <!-- This is already English, but for context -->
            <field name="view_mode">list,form</field> <!-- Changed from kanban,tree,form -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new vehicle
                </p>
            </field>
        </record>

    </data>
</odoo>